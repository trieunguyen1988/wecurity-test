<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Administrator | Security test</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.7 -->
  <link rel="stylesheet" href="/public/admin/css/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/public/admin/css/bower_components/font-awesome/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/public/admin/css/bower_components/Ionicons/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/public/admin/css/AdminLTE.min.css">
  <link rel="stylesheet" href="/public/admin/css/style.css">
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  <link rel="stylesheet" href="/public/admin/css/skins/_all-skins.min.css">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Google Font -->
  <%# <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic"> %>

    <!-- jQuery 3 -->
    <script src="/public/admin/css/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/public/admin/css/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/public/admin/css/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/public/admin/css/bower_components/fastclick/lib/fastclick.js"></script>

</head>
<!-- ADD THE CLASS layout-boxed TO GET A BOXED LAYOUT -->
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>SYSTEM</b></span>
    </a>
    <nav class="navbar navbar-static-top">
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav top-lang">
          <li>
            <a href="/admin/logout" class=""><%=t 'txt-logout', locale: get_locale %></a>
          </li>
          <li>
            <a href="/admin/set-language/vi" class="btn btn-flag <% if @locale == 'vi' %>current_lang<% end %>">
                <img src="/public/images/vi_flag.png" atl="Vietnamese"/>
            </a>
          </li>
          <li>
            <a href="/admin/set-language/ja" class="btn btn-flag <% if @locale == 'ja' %>current_lang<% end %>">
                <img src="/public/images/jp_flag.png" atl="Japanese"/>
            </a>
          </li>
          <li>
            <a href="/admin/set-language/en" class="btn btn-flag <% if @locale == 'en' %>current_lang<% end %>">
                <img src="/public/images/en_flag.png" atl="English"/>
            </a>
          </li>
          <li>
            <a href="/admin/set-language/es" class="btn btn-flag <% if @locale == 'es' %>current_lang<% end %>">
                <img src="/public/images/es_flag.png" atl="Spanish"/>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- =============================================== -->

  <!-- Left side column. contains the sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <img src="/public/admin/img/man.png" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
          <p><%= settings.admin_name%></p>
          <a href="/admin/logout" class=""><%=t 'txt-logout', locale: get_locale %></a>
        </div>
      </div>
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="treeview">
          <a href="/admin">
            <i class="fa fa-dashboard"></i> <span><%=t 'admin.qs-lbl-list', locale: get_locale %></span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
        </li>
      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%= yield%>
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <strong>Copyright &copy; 2017 LIFULL Tech Vietnam Co.,Ltd.</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->
</body>
</html>